<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Successful</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100..900&display=swap" rel="stylesheet">
    <linlk rel="stylesheet" href="styles/navbar.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Montserrat', sans-serif;
        }

        body {
            background-color: #fff7f7;
            color: #333;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 30px;
            background-color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .nav-left a {
            text-decoration: none;
            color: black;
            font-size: 16px;
            font-weight: bold;
            padding: 10px;
            margin-right: 15px;
            transition: all 0.3s ease;
        }

        .nav-left a:hover {
            background-color: #da9e9f;
            color: white;
            border-radius: 20px;
            padding: 10px 20px;
        }

        .search-container {
            display: flex;
            align-items: center;
            position: relative;
            margin-right: 15px;
        }

        .search-container input {
            padding: 10px 35px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 15px;
            width: 200px;
            margin-right: 20px;
        }

        .search-container .search-icon {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 20px;
            color: #333;
        }

        .cart-button {
            background-color: #da9e9f;
            color: #fbfbf5;
            border: none;
            padding: 10px 20px;
            font-size: 15px;
            font-weight: bold;
            display: flex;
            align-items: center;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .cart-button i {
            margin-right: 10px;
            font-size: 20px;
        }

        .cart-button:hover {
            opacity: 0.7;
        }

        .success-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 35px;
            text-align: center;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 50px;
            margin-bottom: 25px;
        }

        .checkmark {
            color: #4CAF50;
            font-size: 80px;
            margin-bottom: 20px;
        }

        .message {
            font-size: 18px;
            margin-bottom: 20px;
        }

        .sub-message {
            font-size: 14px;
            color: #666;
            margin-bottom: 30px;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
        }

        .view-orders-btn,
        .continue-shopping-btn {
            display: inline-block;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            text-align: center;
            padding: 15px 30px;
            font-weight: bold;
            text-decoration: none;
        }

        .view-orders-btn {
            background-color: #da9e9f;
            color: #fff;
        }

        .continue-shopping-btn {
            background-color: #ede9e9;
            color: #da9e9f;
        }

        .view-orders-btn:hover,
        .continue-shopping-btn:hover {
            opacity: 0.7;
        }

        .support-link {
            display: block;
            margin-top: 25px;
            font-size: 12px;
            color: #f57272;
            text-decoration: none;
        }

        .support-link:hover {
            text-decoration: underline;
        }

        footer {
            text-align: center;
            padding: 1rem 0;
            margin-top: 2rem;
            color: #333;
        }

        @media (max-width: 768px) {
            .navbar {
                flex-direction: column;
                padding: 10px;
            }

            .nav-left {
                margin-bottom: 10px;
            }

            .nav-left a {
                font-size: 14px;
                margin: 5px;
                padding: 8px;
            }

            .search-container input {
                width: 150px;
            }

            .success-container {
                padding: 20px;
            }

            h1 {
                font-size: 40px;
            }

            .button-container {
                flex-direction: column;
                gap: 10px;
            }

            .view-orders-btn,
            .continue-shopping-btn {
                width: 100%;
            }

            .try-again-btn,
            .view-cart-btn {
                width: 100%;
            }
        }
        .failed-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 35px;
            text-align: center;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .failed-container {
                padding: 20px;
            }

            h1 {
                font-size: 40px;
            }

            .button-container {
                flex-direction: column;
                gap: 10px;
            }
        .error-icon {
            color: #f44336;
            font-size: 80px;
            margin-bottom: 20px;
        }
        .button-container {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
        }
        .try-again-btn,
        .view-cart-btn {
            display: inline-block;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            text-align: center;
            padding: 15px 30px;
            font-weight: bold;
            text-decoration: none;
        }
        .try-again-btn {
            background-color: #da9e9f;
            color: #fff;
        }

        .view-cart-btn {
            background-color: #ede9e9;
            color: #da9e9f;
        }

        .try-again-btn:hover,
        .view-cart-btn:hover {
            opacity: 0.7;
        }
    </style>
</head>
<body>
   
    
    
    <!-- Main Content -->
    <div class="container">
        <div class="payment-container">
            <!-- Loading State -->
            <div id="loading" class="text-center">
                <div class="spinner-border text-primary loading-spinner" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">
                    <%= pageTitle === 'Payment Successful' ? 'Processing your payment...' : 'Verifying payment status...' %>
                </p>
            </div>

            <!-- Success Content -->
            <% if (pageTitle === 'Payment Successful') { %>
               <!-- Success Section -->
    <div class="success-container">
        <h1>Payment Successful</h1>
        <i class="fas fa-check-circle checkmark"></i>
        <p class="message">Your payment has been processed successfully!</p>
        <p class="sub-message">Your order is now being prepared for shipping.</p>
        <div class="button-container">
            <a href="/account" class="view-orders-btn">View Orders</a>
            <a href="/" class="continue-shopping-btn">Continue Shopping</a>
        </div>
       
    </div>
            <% } %>

            <!-- Error Content -->
            <% if (pageTitle === 'Payment Failed') { %>
                <div class="failed-container">
                    <h1>Payment Failed</h1>
                    <i class="fas fa-times-circle error-icon"></i>
                    <p class="message">Your payment could not be processed.</p>
                    <p class="sub-message">Please check your payment details and try again.</p>
                    <div class="button-container">
                        <a href="/checkout" class="try-again-btn">Try Again</a>
                        <a href="/cart" class="view-cart-btn">View Cart</a>
                    </div>
                    <a href="/support" class="support-link">Need help? Contact support</a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">&copy; 2024 Your Store. All rights reserved.</span>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/scripts/PaymongoHandler.js"></script>
    <script src="/scripts/Checkout.js"></script>
    <script>
         document.addEventListener('DOMContentLoaded', async () => {
        const loadingElement = document.getElementById('loading');
        const successContent = document.getElementById('success-content');
        const errorContent = document.getElementById('error-content');
        
        const urlParams = new URLSearchParams(window.location.search);
        const orderId = urlParams.get('orderId');
        
        if (!orderId) {
            console.error('No order ID found in URL');
            window.location.href = '/cart';
            return;
        }

        try {
            // Add a small delay to ensure loading spinner is visible
            await new Promise(resolve => setTimeout(resolve, 1000));
            
            // Only proceed with payment success handling if we're on the success page
            if (window.location.pathname === '/payment-success') {
                await CheckoutHandler.handlePaymentSuccess(orderId);
                
                // Update UI elements if they exist
                if (loadingElement) loadingElement.style.display = 'none';
                if (successContent) successContent.style.display = 'block';
                
                // Redirect to orders page after successful processing
            } else {
                // For failed payments, just show the error content
                if (loadingElement) loadingElement.style.display = 'none';
                if (errorContent) errorContent.style.display = 'block';
            }
        } catch (error) {
            console.error('Error processing payment:', error);
            
            // Show error content if elements exist
            if (loadingElement) loadingElement.style.display = 'none';
            if (errorContent) errorContent.style.display = 'block';
            
            // Show error alert
            await Swal.fire({
                title: 'Payment Error',
                text: error.message || 'An error occurred while processing your payment',
                icon: 'error',
                confirmButtonText: 'OK'
            });
            
            // Redirect to cart only for specific errors
            if (error.message.includes('Payment data not found') || 
                error.message.includes('Payment session expired')) {
                window.location.href = '/cart';
            }
        }
    });
    </script>
</body>
</html>