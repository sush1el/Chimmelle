<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chimelleshop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .payment-container {
            max-width: 600px;
            margin: 40px auto;
            padding: 20px;
        }
        .navbar-brand {
            font-weight: bold;
        }
        .loading-spinner {
            margin: 40px auto;
        }
        .action-buttons {
            margin-top: 20px;
        }
        .action-buttons .btn {
            min-width: 150px;
            margin: 5px;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Your Store</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/products">Products</a>
                    </li>
                    <% if (user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/account">Orders</a>
                        </li>
                    <% } %>
                </ul>
                <ul class="navbar-nav">
                    <% if (user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/cart">Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <div class="payment-container">
            <!-- Loading State -->
            <div id="loading" class="text-center">
                <div class="spinner-border text-primary loading-spinner" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">
                    <%= pageTitle === 'Payment Successful' ? 'Processing your payment...' : 'Verifying payment status...' %>
                </p>
            </div>

            <!-- Success Content -->
            <% if (pageTitle === 'Payment Successful') { %>
                <div id="success-content" class="text-center" style="display: none;">
                    <div class="alert alert-success">
                        <h4 class="alert-heading">Payment Successful!</h4>
                        <p>Your order has been confirmed and is being processed.</p>
                    </div>
                    <div class="action-buttons">
                        <a href="/account" class="btn btn-primary">View Orders</a>
                        <a href="/" class="btn btn-outline-primary">Continue Shopping</a>
                    </div>
                </div>
            <% } %>

            <!-- Error Content -->
            <% if (pageTitle === 'Payment Failed') { %>
                <div id="error-content" class="text-center" style="display: none;">
                    <div class="alert alert-danger">
                        <h4 class="alert-heading">Payment Failed</h4>
                        <p>Your payment was not successful. Please try again.</p>
                    </div>
                    <div class="action-buttons">
                        <a href="/checkout" class="btn btn-primary">Return to Checkout</a>
                        <a href="/cart" class="btn btn-outline-primary">View Cart</a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">&copy; 2024 Your Store. All rights reserved.</span>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            const urlParams = new URLSearchParams(window.location.search);
            const orderId = urlParams.get('orderId');
            const paymentIntentId = sessionStorage.getItem('currentPaymentIntentId');
            const isSuccess = window.location.pathname === '/payment-success';

            try {
                const response = await fetch(`/api/${isSuccess ? 'payment-success' : 'payment-failed'}/${orderId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(
                        isSuccess 
                            ? { paymentIntentId }
                            : { 
                                paymentIntentId,
                                error: 'Payment failed or cancelled by user'
                            }
                    )
                });

                if (!response.ok) {
                    throw new Error(`Failed to process payment ${isSuccess ? 'success' : 'failure'}`);
                }

                // Hide loading, show appropriate content
                document.getElementById('loading').style.display = 'none';
                const contentId = isSuccess ? 'success-content' : 'error-content';
                const content = document.getElementById(contentId);
                if (content) {
                    content.style.display = 'block';
                }

                // Clear payment-related session storage
                sessionStorage.removeItem('currentPaymentIntentId');
                sessionStorage.removeItem('currentOrderId');
                if (isSuccess) {
                    sessionStorage.removeItem('checkoutData');
                }

                // Show appropriate alert
                await Swal.fire({
                    title: isSuccess ? 'Payment Successful!' : 'Payment Failed',
                    text: isSuccess 
                        ? 'Your order has been confirmed.'
                        : 'Your payment was not successful. Please try again.',
                    icon: isSuccess ? 'success' : 'error',
                    confirmButtonText: isSuccess ? 'View Orders' : 'Return to Checkout'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = isSuccess ? '/orders' : '/checkout';
                    }
                });
            } catch (error) {
                console.error('Error processing payment:', error);
                await Swal.fire({
                    title: 'Error',
                    text: 'There was an error processing your payment status.',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
                window.location.href = '/checkout';
            }
        });
    </script>
</body>
</html>