<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account Page</title>
    <link rel="stylesheet" href="styles/create-account.css">
    <link rel="stylesheet" href="styles/Footer.css"> 
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="nav-left">
            <a href="#">HOME</a>
            <a href="#">ARTISTS</a>
            <a href="#">SHOP</a>
            <a href="#">SUPPORT</a>
        </div>
        <div class="nav-center">
            <img class= "logo" src="resources/logo.jpg" alt="Logo" class="logo">
        </div>
        <div class="search-container">
            <i class="fa-solid fa-magnifying-glass search-icon"></i>
            <input type="text" placeholder="Search for...">
            <a href="#">
                <img class="profile-user" src="resources/profile.jpg" alt="Profile">
            </a>
            <a href="#">
                <button class="cart-button">
                    <i class="fa-solid fa-cart-shopping" style="color: #fbfbf5;"></i> Cart 
                </button>
            </a>
        </div>
    </nav>

    <!-- Create Account Section -->
    <div class="create-account-container">
        <h1>Create Account</h1>
        
        <form id="createAccountForm" class="account-form">
            <input type="text" id="firstName" placeholder="First Name" required>
            <input type="text" id="lastName" placeholder="Last Name" required>
            <input type="email" id="email" placeholder="Email" required>
            <input type="password" id="password" placeholder="Password" required>

            <div class="form-buttons">
                <button type="button" class="back-to-login-btn" onclick="window.location.href= '/login-page' ">Back to Login</button>
                <button type="submit" class="create-account-btn">Submit</button>
            </div>
        </form>
        <a href="#" class="return-to-store">Return to Store</a>
    </div>
    
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-section">
                <h2>Support</h2>
                <ul class="footer-links">
                    <li><a href="/contact">Contact Us</a></li>
                    <li><a href="/faqs">FAQs</a></li>
                    <li><a href="TC.html" >Terms and Conditions</a></li>
                    <li><a href="/privacy">Privacy Policy</a></li>
                    <li><a href="/return">Return & Exchange</a></li>
                    <li><a href="/payment">Shipping & Payment </a></li>
                    
                </ul>
            </div>
    
            <div class="footer-section">
                <h2>Quick Links</h2>
                <ul class="footer-links">
                    <li><a href="/products">Products</a></li>
                    <li><a href="/artists">Artists</a></li>
                </ul>
                <div class="social-links">
                    <a href="https://facebook.com" aria-label="Visit our Facebook page">
                        <i class="fa-brands fa-facebook social-icon"></i>
                    </a>
                    <a href="https://twitter.com" aria-label="Visit our Twitter page">
                        <i class="fa-brands fa-twitter social-icon"></i>
                    </a>
                </div>
            </div>
    
            <div class="footer-section">
                <!-- Replace /placeholder.svg with your mascot image URL -->
                <img src="resources/chimmy-footer.jpg" alt="Cute mascot character" class="mascot">
         
            </div>
        </div>
        <p class = "copyright-text">&copy; 2024 Chimelle Shop. All rights reserved.</p>
    </footer>

    <script src="scripts/Create-Account.js"></script> 
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="scripts/Footer.js"></script>
</body>

</html>
