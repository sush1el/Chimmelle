<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/reset-password.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="nav-left">
            <a href="/">HOME</a>
            <a href="/artists">ARTISTS</a>
            <a href="/shop">SHOP</a>
            <a href="/support">SUPPORT</a>
        </div>
        <div class="nav-center">
            <img class="logo" src="/website logo/chimelle-logo.png" alt="Logo">
        </div>
        <div class="search-container">
            <i class="fa-solid fa-magnifying-glass search-icon"></i>
            <input type="text" placeholder="Search for...">
            <a href="/profile">
                <img class="profile-user" src="/website logo/profile.png" alt="Profile">
            </a>
            <a href="/cart">
                <button class="cart-button">
                    <i class="fa-solid fa-cart-shopping"></i> Cart 
                </button>
            </a>
        </div>
    </nav>

    <!-- Reset Password Section -->
    <div class="reset-password-container">
        <h1>Reset Password</h1>
        
        <% if (locals.error) { %>
            <div class="message error-message"><%= error %></div>
        <% } %>
        
        <% if (locals.success) { %>
            <div class="message success-message"><%= success %></div>
        <% } %>
        
        <form id="resetPasswordForm" class="reset-password-form">
            <div class="form-group">
                <input type="password" id="newPassword" placeholder="Enter new password" required>
                <!-- Password requirements will be dynamically inserted here -->
            </div>
            <div class="form-group">
                <input type="password" id="confirmPassword" placeholder="Confirm new password" required>
            </div>
            <div class="form-buttons">
                <button type="submit" class="reset-password-btn">Reset Password</button>
            </div>
        </form>
        <a href="/" class="return-to-store">Return to Store</a>
    </div>

    <script src="/scripts/Reset-Password.js"></script>
</body>
</html>